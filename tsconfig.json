{
   "compilerOptions": {
      "lib": [
         "es2018",
         "DOM"
      ],
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
   },
   "include": [
      "tests/**/*.ts",
      "src/**/*.ts",
      ".eslintrc.js"
   ],
   "exclude": [
      "node_modules"
   ]
}